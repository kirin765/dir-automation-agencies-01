{
  "name": "dir-automation-agencies-01",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "collect:partners": "npx tsx scripts/collect-partners.ts --verification-mode strict --require-email --min-score 45",
    "collect:partners:dry-run": "npx tsx scripts/collect-partners.ts --dry-run --write-staging --source duckduckgo --verification-mode strict --require-email --min-score 45 --max-results 500",
    "collect:partners:ingest": "npx tsx scripts/collect-partners.ts --append-to-listings --verification-mode strict --require-email --min-score 45",
    "deploy:pages": "npm run build && npx wrangler pages deploy dist --project-name=dir-automation-agencies-01 --commit-dirty=true",
    "preview": "astro preview",
    "test": "node scripts/quality/test-all.mjs",
    "test:e2e": "node scripts/quality/test-journey.mjs",
    "test:smoke": "node scripts/quality/test-smoke.mjs",
    "test:seo": "node scripts/quality/test-seo.mjs",
    "test:routes": "node scripts/quality/test-routes.mjs",
    "test:api": "node scripts/quality/test-api.mjs",
    "sync:d1:listings": "node scripts/sync-d1-listings.mjs",
    "sync-and-build": "npm run sync:d1:listings && npm run build",
    "sync-and-deploy": "npm run sync:d1:listings && npm run build && npx wrangler pages deploy dist --project-name=dir-automation-agencies-01 --commit-dirty=true",
    "admin:tui": "bash scripts/admin-ops.sh",
    "test:workflow": "node scripts/test-pages-workflow.mjs",
    "astro": "astro"
  },
  "dependencies": {
    "astro": "^4.15.0",
    "@astrojs/tailwind": "^5.1.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "csv-parse": "^5.5.0",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  }
}
