---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { GUIDE_INDEX } from '../../lib/guides';
---

<Layout
  title="Automation Guides | AI Automation Agencies Directory"
  description="Actionable automation guides for comparing platforms, planning budgets, and hiring agencies."
>
  <Header />

  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold mb-3">Automation Guides</h1>
    <p class="text-slate-400 mb-10">
      Practical playbooks for founders and procurement teams.
    </p>

    <div class="grid md:grid-cols-2 gap-6">
      {GUIDE_INDEX.map((guide) => (
        <a
          href={`/guides/${guide.slug}`}
          class="block p-6 bg-slate-800 border border-slate-700 rounded-2xl card-hover"
        >
          <p class="text-xs uppercase text-green-400 mb-2">{guide.category}</p>
          <h2 class="text-xl font-bold mb-2">{guide.title}</h2>
          <p class="text-slate-400 text-sm">{guide.summary}</p>
        </a>
      ))}
    </div>

    <section class="mt-14 bg-slate-800 border border-slate-700 rounded-2xl p-8">
      <h2 class="text-2xl font-bold mb-4">Ready to contact an agency?</h2>
      <p class="text-slate-400 mb-6">
        Use one of our quick intake routes to get matched quickly by platform and location.
      </p>
      <a
        href="/search"
        data-track="guide-cta-search"
        class="inline-block px-6 py-3 bg-green-500 hover:bg-green-600 text-black font-semibold rounded-lg"
      >
        Start Search
      </a>
    </section>
  </main>

  <Footer />
</Layout>
