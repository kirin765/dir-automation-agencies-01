---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getAll, getByCountry, getOwnershipRequestStatusBySlug } from '../../../scripts/process-data';
import { GUIDE_DATA } from '../../lib/guides';

export function getStaticPaths() {
  const listings = getAll();
  return listings.map(listing => ({
    params: { slug: listing.slug },
    props: { listing }
  }));
}

const { listing } = Astro.props;
const requestStatus = getOwnershipRequestStatusBySlug(listing.slug);
const leadSuccess = Astro.url.searchParams.get('lead') === 'ok';
const sameCountryListings = getByCountry(listing.country)
  .filter((entry) => entry.slug !== listing.slug)
  .slice(0, 4);
const guideLinks = GUIDE_DATA
  .filter((guide) =>
    guide.relatedCategories.some((category) => listing.platforms.includes(category))
  )
  .slice(0, 2);

const schema = {
  '@context': 'https://schema.org',
  '@type': 'ProfessionalService',
  name: listing.name,
  description: listing.description,
  address: {
    '@type': 'PostalAddress',
    addressLocality: listing.location,
    addressCountry: listing.country
  },
  priceRange: `$${listing.priceMin}-$${listing.priceMax}`,
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: listing.rating,
    reviewCount: listing.reviewCount
  },
  url: listing.website,
  mainEntityOfPage: listing.website,
};
---

<Layout title={`${listing.name} - AI Automation Expert`} description={listing.description}>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <Header />

  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <a href="/" class="text-green-400 hover:text-green-300">‚Üê Back to Directory</a>

    <div class="mt-8 bg-slate-800 border border-slate-700 rounded-2xl p-8">
      <div class="flex flex-wrap items-start justify-between gap-4 mb-6">
        <div>
          <h1 class="text-3xl font-bold mb-2">{listing.name}</h1>
          <p class="text-slate-400">üìç {listing.location}, {listing.country}</p>
        </div>
        {listing.isFeaturedActive && (
          <span class="px-4 py-2 bg-green-500/20 text-green-400 font-medium rounded-full">
            ‚òÖ Featured {listing.featuredUntil ? `until ${new Date(listing.featuredUntil).toLocaleDateString()}` : ''}
          </span>
        )}
      </div>

      <div class="flex flex-wrap gap-2 mb-6">
        {listing.platforms.map(p => (
          <span class="px-3 py-1 bg-slate-700 text-slate-300 text-sm rounded-full capitalize">
            {p}
          </span>
        ))}
      </div>

      <p class="text-slate-300 text-lg mb-8">{listing.description}</p>

      <div class="grid md:grid-cols-3 gap-6 mb-8">
        <div class="bg-slate-700/50 rounded-xl p-4 text-center">
          <div class="text-2xl font-bold text-green-400">${listing.priceMin}-${listing.priceMax}</div>
          <div class="text-slate-500 text-sm">Project Range</div>
        </div>
        <div class="bg-slate-700/50 rounded-xl p-4 text-center">
          <div class="text-2xl font-bold text-yellow-400">
            {'‚òÖ'.repeat(Math.floor(listing.rating))} {listing.rating}
          </div>
          <div class="text-slate-500 text-sm">{listing.reviewCount} Reviews</div>
        </div>
        <div class="bg-slate-700/50 rounded-xl p-4 text-center">
          <div class="text-2xl font-bold text-blue-400">{listing.platforms.length}</div>
          <div class="text-slate-500 text-sm">Platforms</div>
        </div>
      </div>

      <div class="grid md:grid-cols-3 gap-4">
        <a
          href={listing.website}
          target="_blank"
          rel="noopener noreferrer"
          data-track="listing_click"
          data-listing-slug={listing.slug}
          class="px-6 py-3 bg-green-500 hover:bg-green-600 text-black font-semibold rounded-xl text-center transition-colors"
        >
          Visit Website
        </a>
        <a
          href={`/contact?agency=${listing.slug}`}
          data-track="cta_click"
          data-listing-slug={listing.slug}
          class="px-6 py-3 border border-slate-600 hover:border-white text-white font-semibold rounded-xl text-center transition-colors"
        >
          Contact Agency
        </a>
        <a
          href={`/claim?listing=${listing.slug}`}
          data-track="cta_click"
          data-listing-slug={listing.slug}
          class="px-6 py-3 border border-green-500 text-green-300 hover:bg-green-500/10 font-semibold rounded-xl text-center transition-colors"
        >
          Claim this Listing
        </a>
      </div>

      {requestStatus && (
        <p class="mt-4 text-sm text-slate-400">
          Ownership request status: <span class="font-semibold uppercase">{requestStatus}</span>
        </p>
      )}
    </div>

    <div class="mt-8 bg-slate-800 border border-slate-700 rounded-2xl p-8">
      <h2 class="text-2xl font-bold mb-2">Send a lead to {listing.name}</h2>
      <p class="text-slate-400 mb-6">This inquiry is stored and can be reviewed by the directory team.</p>

      {leadSuccess && <p class="mb-4 text-green-400">Thanks! Your inquiry was submitted.</p>}

      <form
        method="POST"
        action="/api/contact"
        class="space-y-4"
        data-track-form="lead_form_submit"
        data-listing={listing.slug}
      >
        <input type="hidden" name="cf-turnstile-response" value="" />
        <input type="hidden" name="listingSlug" value={listing.slug} />
        <div class="grid md:grid-cols-2 gap-4">
          <input name="name" required placeholder="Your name" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-xl text-white" />
          <input type="email" name="email" required placeholder="Your email" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-xl text-white" />
        </div>
        <input name="budget" placeholder="Budget (optional)" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-xl text-white" />
        <textarea name="message" required rows="4" placeholder="What do you need automated?" class="w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-xl text-white"></textarea>
        <button
          type="submit"
          data-track="lead_form_submit"
          data-listing-slug={listing.slug}
          class="px-6 py-3 bg-green-500 hover:bg-green-600 text-black font-semibold rounded-xl"
        >
          Send Inquiry
        </button>
      </form>
    </div>

    <div class="mt-10 grid md:grid-cols-2 gap-6">
      <section class="bg-slate-800 border border-slate-700 rounded-xl p-6">
        <h2 class="text-2xl font-bold mb-3">More {listing.location} agencies</h2>
        <div class="space-y-3">
          {sameCountryListings.map((entry) => (
            <a
              href={`/listing/${entry.slug}`}
              data-track="listing_click"
              data-listing-slug={entry.slug}
              class="flex justify-between items-center text-sm text-slate-300 hover:text-white"
            >
              <span>{entry.name}</span>
              <span>${entry.priceMin}-${entry.priceMax}</span>
            </a>
          ))}
          {!sameCountryListings.length && (
            <p class="text-slate-400 text-sm">No additional listings found in this location yet.</p>
          )}
        </div>
      </section>

      <section class="bg-slate-800 border border-slate-700 rounded-xl p-6">
        <h2 class="text-2xl font-bold mb-3">Related guide pages</h2>
        <div class="space-y-3">
          {guideLinks.map((guide) => (
            <a
              href={`/guides/${guide.slug}`}
              data-track="guide_click"
              class="block text-sm text-slate-300 hover:text-green-300"
            >
              {guide.title}
            </a>
          ))}
          {!guideLinks.length && (
            <a href="/guides" data-track="guide_click" class="text-sm text-slate-300 hover:text-green-300">
              Explore all guides
            </a>
          )}
        </div>
      </section>
    </div>

    <div class="mt-12 prose prose-invert max-w-none">
      <h2>About {listing.name}</h2>
      <p>{listing.description}</p>
    </div>
  </main>

  <Footer />
</Layout>
